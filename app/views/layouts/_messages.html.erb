    <div class="row mt-3 d-flex justify-content-center" >
      <div class="col-sm-8" >
          <% flash.each do |name, msg|%>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= content_tag :div, msg, :id =>  "flash_#{name}" if msg.is_a?(String)%>
            </div >
          <% end %>
      </div>
    </div>
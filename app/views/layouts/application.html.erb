<!DOCTYPE html>
<html>
  <head>
    <title>BlogProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash.any? %>
      <%= render 'layouts/messages' %>
    <% end %>

<% if user_signed_in? %>
    <div class="d-flex align-items-center  justify-content-between col-7 m-auto"> 
      <h4 class = "p-4 text-center " >Current user</h4>


    <div class='mr-2'>

      <%= link_to "Edit account", edit_user_registration_path, class: 'btn btn-outline-primary btn-sm' %>
      <%= link_to 'Create a new post', new_user_post_url(@user) , class: 'btn btn-outline-success btn-sm'%>
      <%= link_to "Logout", destroy_user_session_path, class: 'btn btn-outline-danger btn-sm' %>  
    </div>
  </div>
<% end %>

    <%= yield %>



  </body>
</html>
